#cpu {
  color: @cpu_monitor_color;
  background-color: @base_alpha_50;
  border-radius: 7.5px;
}

#memory {
  color: @yellow;
  background-color: @base_alpha_50;
  border-radius: 7.5px;
}
#custom-system {
  color: @cpu_monitor_color;
  background-color: @base_alpha_70;
  border-radius: 7.5px;
}

#custom-power-menu {
  border-radius: 9.5px;
  background-color: @power_menu_bg;
  border-radius: 7.5px;
  padding: 0 5px;
}

#custom-notify base{
  color: @notify_pop_color;
  border-radius: 8px;
  background-color: @crust;
  border-radius: 7.5px;
  padding: 0 5px;
}


#custom-launcher {
  background-color: @base_alpha_70;
  color: @launcher_icon_color;
  border-radius: 7.5px;
  padding: 0 3px;
}

#custom-weather.severe {
  color: @weather_severe_color;
}

#custom-weather.sunnyDay {
  color: @weather_sunny_color;
}

#custom-weather.clearNight {
  color: @text;
}

#custom-weather.cloudyFoggyDay,
#custom-weather.cloudyFoggyNight {
  color: @weather_cloudy_color;
}

#custom-weather.rainyDay,
#custom-weather.rainyNight {
  color: @weather_rainy_color;
}

#custom-weather.showyIcyDay,
#custom-weather.snowyIcyNight {
  color: @weather_snowy_color;
}

#custom-weather.default {
  color: @weather_default_color;
}

/* If workspaces is the leftmost module, omit left margin */
.modules-left > widget:first-child > #workspaces {
  margin-left: 0;
}

/* If workspaces is the rightmost module, omit right margin */
.modules-right > widget:last-child > #workspaces {
  margin-right: 0;
}

#pulseaudio {
  color: @pulseaudio_icon_color;
}

#backlight {
  /* color: #EBCB8B; */
  color: @backlight_icon_color;
}

#clock {
  color: @clock_icon_color;
  /* background-color: #14141e; */
}

#battery {
  color: @battery_icon_color;
  /* background-color: #90b1b1; */
}

#battery.charging,
#battery.full,
#battery.plugged {
  color: @battery_charging_icon_color;
  /* background-color: #26a65b; */
}

@keyframes blink {
  to {
    background-color: @mantle_alpha_50;
    color: @spotify_text_color;
  }
}

#battery.critical:not(.charging) {
  color: @battery_critical_icon_color;
  animation-name: blink;
  animation-duration: 0.5s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  animation-direction: alternate;
}

label:focus {
  background-color: @black; /* Using opaque black for focus */
}

#disk {
  background-color: @disk_monitor_bg;
}

#bluetooth {
  color: @bluetooth_icon_color;
}

#bluetooth.disconnected {
  color: #f53c3c;
}

#network {
  background: @base_alpha_70;
  color: @network_icon_color;
  padding: 0 10px;
  border-radius: 6.5px;
  /* border-radius: 7.5px; */
}
#custom-speed {
  background: @base_alpha_60;
  padding: 0 10px;
  border-radius: 6.5px;
}

#custom-media {
  background-color: @media_player_bg;
  color: @media_player_text_color;
  min-width: 100px;
}

#custom-media.custom-spotify {
  background-color: #66cc99;
}

#custom-media.custom-vlc {
  background-color: @vlc_player_bg;
}

#temperature {
  background-color: @temperature_sensor_bg;
}

#temperature.critical {
  background-color: @temperature_critical_bg;
}

#tray > .passive {
  -gtk-icon-effect: dim;
}

#tray > .needs-attention {
  -gtk-icon-effect: highlight;
  background-color: #eb4d4b;
}

#idle_inhibitor {
  background-color: @idle_inhibitor_bg;
}

#idle_inhibitor.activated {
  background-color: @idle_inhibitor_activated_bg;
  color: @idle_inhibitor_bg;
}

#mpd {
  color: @mpd_icon_color;
}

#mpd.disconnected {
  color: #f53c3c;
}

#mpd.stopped {
  color: @mpd_stopped_color;
}

#mpd.paused {
  color: @mpd_paused_color;
}

#language {
  background: @language_module_bg;
  color: @language_module_text;
  padding: 0 5px;
  margin: 0 5px;
  min-width: 16px;
}

#keyboard-state {
  background: @keyboard_state_bg;
  color: @black; /* Using opaque black for keyboard state */
  padding: 0 0px;
  margin: 0 5px;
  min-width: 16px;
}

#keyboard-state > label {
  padding: 0 5px;
}

#custom-spotify {
  padding: 0 10px;
  margin: 0 4px;
  /* background-color: #1db954; */
  color: @spotify_text_color;
}
#custom-lyrics{
    background: linear-gradient(60deg,
rgb(170, 75, 107), rgb(107, 107, 131), rgb(59, 141, 153));
    color: white;
    padding: 0px 0px;
    font-family: HackGen35 Console NF;
    font-size: 16px;
    border-radius: 10px;
    /* animation: scroll 10s linear infinite; */
}


#keyboard-state > label.locked {
  background: @black_alpha_20;
}
