* {
  /* `otf-font-awesome` is required to be installed for icons */
  font-family: Liga SFMono Nerd Font;
  font-size: 16px;
}

/* 基础颜色定义 - 按功能分组 */

/* 主要颜色 */
@define-color primary_text #cad3f5;
@define-color secondary_text #a5adcb;
@define-color primary_bg #181926;
@define-color secondary_bg #363a4f;
@define-color accent_color #8aadf4;

/* 状态颜色 */
@define-color success_color #a6da95;
@define-color warning_color #eed49f;
@define-color error_color #ed8796;

/* 透明背景 */
@define-color bg_transparent_30 rgba(36, 39, 58, 0.3);
@define-color bg_transparent_50 rgba(36, 39, 58, 0.5);
@define-color bg_transparent_70 rgba(36, 39, 58, 0.7);

/* 功能模块颜色 */
@define-color workspace_active @accent_color;
@define-color workspace_inactive @secondary_text;
@define-color taskbar_active #94727D;
@define-color taskbar_hover rgba(255, 255, 255, 0.2);
@define-color module_bg @bg_transparent_70;
@define-color system_monitor @warning_color;
@define-color audio_color #7dc4e4;
@define-color network_color #f5bde6;
@define-color battery_normal #c6a0f6;
@define-color battery_charging @success_color;
@define-color battery_critical @error_color;


window#waybar {
  background-color: transparent;
  color: @primary_text;
  transition-property: background-color;
  transition-duration: 0.5s;
  border-top: 8px transparent;
  border-radius: 8px;
  transition-duration: 0.5s;
  margin: 16px 16px;
}

window#waybar.hidden {
  opacity: 0.2;
}

#workspaces button {
  padding: 0 5px;
  color: @workspace_inactive;
  background-color: transparent;
  /* Use box-shadow instead of border so the text isn't offset */
  box-shadow: inset 0 -3px transparent;
  /* Avoid rounded borders under each workspace name */
  border: none;
  border-radius: 0;
}

#workspaces button.focused {
  background-color: @workspace_active;
  color: @primary_bg;
}

#workspaces button.urgent {
  background-color: @error_color;
  color: @primary_text;
}

#workspaces button:hover {
  background-color: @accent_color;
  color: @primary_text;
}


#taskbar {
    padding: 0 10px;
    border-radius: 6.5px;
    margin: 0 0px;
    color: #ffffff;
    background-color: @module_bg;
}
#taskbar button {
    min-width: 40px;
    border-radius: 4px;
    padding: 0 0 0 0px;
    margin: 0 1 -2 -2px;
    color: #ffffff;
    background-color: rgba(120, 118, 117, 0.4);
}

#taskbar button:hover {
    background: @taskbar_hover;
    box-shadow: inset 0 3px #ffffff;
}

#taskbar button.active {
    background-color: @taskbar_active;
    box-shadow: inset 0 3px #24f3f2;
}

#cava {
    color: @accent_color;
    font-size: 8px;
}

#disk,
#temperature,
#custom-hyprPicker,
#custom-weather,
#custom-weather.severe,
#custom-weather.sunnyDay,
#custom-weather.clearNight,
#custom-weather.cloudyFoggyDay,
#custom-weather.cloudyFoggyNight,
#custom-weather.rainyDay,
#custom-weather.rainyNight,
#custom-weather.showyIcyDay,
#custom-weather.snowyIcyNight,
#custom-weather.default {
  padding: 0 10px;
  color: @primary_text;
  border-radius: 6.5px;
  background-color: @secondary_bg;
}

#tray{
  background-color: @module_bg;
  padding: 0 10px;
  color: @primary_text;
  border-radius: 6.5px;
}

#custom-power-menu{
  padding: 0 10px;
  color: @primary_text;
  border-radius: 6.5px;
  background-color: @primary_bg;
}
#pulseaudio{
  padding: 0 10px;
  color: @audio_color;
  border-radius: 6.5px;
  background-color: @module_bg;
}
#backlight{
  padding: 0 10px;
  color: @primary_text;
  border-radius: 6.5px;
  background-color: @module_bg;
}

#clock{
  padding: 0 10px;
  color: @primary_text;
  border-radius: 6.5px;
  background-color: @module_bg;
}

#battery,
#pulseaudio,
#custom-media,
#mode,
#idle_inhibitor,
#custom-spotify,
#bluetooth{
    padding: 0 10px;
    color: @primary_text;
    border-radius: 6.5px;
    background-color: @module_bg;
}
#mpd{
    padding: 0 10px;
    color: @primary_text;
    font-family: HackGen35 Console NF;
    border-radius: 6.5px;
    background-color: @module_bg;
}
#custom-notify{
  padding: 0 10px;
  border-radius: 6.5px;
  color: @accent_color;
  background-color: @module_bg;
}


#window {
    padding: 0 10px;
    color: @primary_text;
    font-size: 11px;
    border-radius: 6.5px;
    background-color: @bg_transparent_70;
}

#workspaces {
    background-color: @module_bg;
    margin: -3px 3px -4px 3px;
    padding: 0px 4px;
    border-radius: 10px;
    font-weight: 400;
    font-size: 10px;
    color: #ffffff;
    opacity: 0.95;
}

#workspaces button {
    padding: 1px 5px;
    margin: 2px 3px;
    border-radius: 8px;
    background-color: rgba(255, 255, 255, 0.08);
    color: rgba(255, 255, 255, 0.6);
    min-height: 18px;
    min-width: 18px;
    transition: all 0.15s ease-in-out;
    opacity: 0.7;
}

#workspaces button.active {
    background-color: @workspace_active;
    color: white;
    border-radius: 50%;
    padding: 2px;
    min-width: 20px;
    min-height: 20px;
    opacity: 1.0;
}

#workspaces button:hover {
    background-color: rgba(255, 255, 255, 0.35);
    color: rgba(255, 255, 255, 0.9);
    border-radius: 10px;
    opacity: 0.9;
}

