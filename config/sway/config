# mouse mode
# mode "mouse" {
# }
# bindsym $mod+g mode "mouse"

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt
        bindsym j resize shrink height 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar
bindsym $mod+shift+b bar mode toggle
bar {
    id bar-0
    status_command i3blocks -c ~/.config/sway/i3blocks.conf
    height 24
    position top
    font pango:SFMono Nerd Font SemiBold 12
    tray_padding 2
    status_edge_padding 0
    separator_symbol "|"
    workspace_min_width 10
    # Mouse bindings for touchpad scrolling
    bindsym button8 workspace next_on_output
    bindsym button9 workspace prev_on_output
    strip_workspace_numbers yes

    colors {
        background          #242736df
        separator           #44475a
        statusline          #f8f8f2
        # workspace color   border  backgr  text
        focused_workspace   #6272a4 #6272a4 #f8f8f2
        active_workspace    #44475a #44475a #f8f8f2
        inactive_workspace  #282a36 #282a36 #bfbfbf
        urgent_workspace    #ff5555 #ff5555 #f8f8f2
        binding_mode        #ff79c6 #ff79c6 #f8f8f2
    }
}
